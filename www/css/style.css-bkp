/*@import url('https://fonts.googleapis.com/css2?family=Padauk&display=swap');*/
@font-face {
    font-family: 'myfont';
    src: url('/static/gavali.ttf')  format('truetype');
}

html { overflow-y: scroll; }

div#ContentBody {    
    line-height: 35px;
}

pre {
    line-height: 18px;
    white-space: pre-wrap;       /* Since CSS 2.1 */
    white-space: -moz-pre-wrap;  /* Mozilla, since 1999 */
    white-space: -pre-wrap;      /* Opera 4-6 */
    white-space: -o-pre-wrap;    /* Opera 7 */
    word-wrap: break-word;       /* Internet Explorer 5.5+ */
    overflow-x: auto;
}

div#menubar {
    margin: 0px;
    padding-top: 0px;
    padding-bottom: 0px;
    position: fixed;
    width: 100%;
    background-color: #fff;
    ;ackground-image: linear-gradient(to bottom right, #EFEFF0, #FEEFDD);
    border-bottom-width: 1px;
    border-bottom-color: #888;
    border-bottom-style: dashed;
    font-family: Padauk, "Helvetica Neue", Helvetica;
}

logo-left {
    font-family: Padauk, "Helvetica Neue", Helvetica;
    font-size: 22px;
    font-weight: bold;
    adding: 0px 5px 0px 10px;
    order: #fff 2px SOLID;
}
logo-right {
    color:#A31621;
    color: #F7C548;
    font-size: 22px;
    font-family: Padauk, "Helvetica Neue", Helvetica;
    font-weight: bold;
    padding: 0px 0px 0px 0px;
    order: #fff 2px SOLID;
    ackground: #fff;
}

k3 {
    display: block;
}

h3, k3 {
    font-size: 24px;
    margin-top: 0px;
    margin-bottom: 15px;
    color: #2C365E;
}

h4 {
    font-size: 20px;
    font-weight: bold;
    margin-top: 5px;
    margin-bottom: 0px;
}

table#menu {
    width:800px;
    order:0px;
    height: 46px;
}

div#bodyTopic {
    margin: 0px;
    padding-top: 70px;
    padding-bottom: 600px;
}

table {
    border-spacing: 0pt;
}

.head td {
    border-bottom: #888 1px SOLID;
    padding: 2pt;
}

body {
    font-size: 20px;
    color: #000;
    padding-top: 0px;
    padding-left: 0px;
    padding-right: 0px;
    padding-bottom: 50px;
    margin: 0px;
    font-family: Padauk, "Helvetica Neue", Helvetica;
}

table#topicContent {
    width:800px;
    border:0px;
    font-size: 20px;
    font-family: Padauk, "Helvetica Neue", Helvetica;
}

table#menu tr td a {
    padding-right: 5px;
    text-decoration: none;
    color: #000;
    font-size: 20px;
    font-family: Padauk, "Helvetica Neue", Helvetica;
}

a {
    color: #4E8098;
    outline: none;
}

a:hover {
    color: #D74E09;
}

img {
    display: block;
    margin-left: auto;
    margin-right: auto;
}

table#menu tr td .activeLink {
    padding-right: 5px;
    color:#C49799;
    color:#883955;
    color:#FF3E41;
    font-weight: bold;
}

/*text styles*/
/* Emphasis */
e {
    font-weight: bold;
    font-style: italic;
}

fs {
    float: right;
}

.points {
    padding-left: 50px;
}

.ship {
    -webkit-filter: grayscale(100%); /* Safari 6.0 - 9.0 */
    filter: grayscale(100%);
}

ul {
    list-style-type: square;
}

ul ul {
    list-style-type: disc;
}

.align-right {
    align: right;
    float: right;
}

meditate::before {
    content : "Diogenes Meditating...";
    font-family: "Syne Mono", "Courier New", Consolas;
    font-size: 16px;
    background: #fafafa;
    color: #f2a;
    padding: 5px;
    margin:10px;
    border-radius: 8px;
    display: block;
}

draft::before {
    content : "draft version - I am still working on it";
    font-family: "Syne Mono", "Courier New", Consolas;
    font-size: 16px;
    background: #efefef;
    color: #f22;
    padding-left: 10px;
    margin-bottom: 10px;
    border-radius: 8px;
    display: block;
}

hl {
    color: #33e;
    font-weight: bold;
}
